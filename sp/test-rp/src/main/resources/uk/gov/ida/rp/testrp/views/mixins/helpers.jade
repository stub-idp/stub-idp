mixin javascriptIncludeTag(path, type)
  script(src="#{javascriptBase}/#{path}.js", type="#{type}")

mixin stylesheetLinkTag(path, media)
  link(href="#{stylesheetsBase}/#{path}.css", media="#{media}", rel="stylesheet", type="text/css")

mixin imageIncludeTag(path, alt, cssClasses, title)
  alt = alt || ''
  cssClasses = cssClasses || ''
  title = title || ''
  img(src="#{imagesBase}/#{path}", alt="#{alt}", class="#{cssClasses}", title="#{title}")

mixin buildRelatedContent(relatedContent)
  .related-content
    block relatedContent